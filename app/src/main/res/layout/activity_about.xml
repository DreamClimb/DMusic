<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_sub">

    <com.d.dmusic.view.TitleLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        android:background="@color/color_main"
        app:tl_leftDrawable="@drawable/ic_title_back"
        app:tl_middleText="关于畅听音乐" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_launcher_round" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin"
            android:gravity="center"
            android:text="(Android)"
            android:textColor="@color/color_main"
            android:textSize="@dimen/dimen_text_sub" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="版本号：1.0.0"
            android:textColor="@color/color_main"
            android:textSize="@dimen/dimen_text_main" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="131dp"
            android:gravity="center"
            android:text="追求速度、简约和安全的本地音乐播放器"
            android:textColor="@color/color_main"
            android:textSize="@dimen/dimen_text_sub" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_link"
        android:gravity="center"
        android:text="Copyright@D"
        android:textColor="@color/color_main"
        android:textSize="@dimen/dimen_text_sub" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_margin"
        android:gravity="center"
        android:text="Open Source@github.com:DMusic"
        android:textColor="@color/color_main"
        android:textSize="@dimen/dimen_text_sub" />
</RelativeLayout>