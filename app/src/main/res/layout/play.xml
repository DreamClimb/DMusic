<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_title_height"
            android:layout_height="@dimen/dimen_title_height"
            android:padding="15dp"
            android:src="@drawable/sub_more" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_text_sub" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/dimen_title_height"
            android:layout_height="@dimen/dimen_title_height"
            android:padding="15dp"
            android:src="@drawable/more" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llyt_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_album_cover" />
        </LinearLayout>

        <com.d.dmusic.view.lrc.LrcView
            android:id="@+id/lrcv_lrc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_margin"
            app:lrcCurTextColor="@color/color_main"
            app:lrcCurTextSize="17dp"
            app:lrcMaxScale="1.7"
            app:lrcMinScale="0.7"
            app:lrcPadding="17dp"
            app:lrcTextColor="@color/color_gray"
            app:lrcTextSize="15dp"
            app:lrcTimeColor="@color/color_white"
            app:lrcTimeSize="8dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:text="00:00"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/dimen_text_mini" />

        <SeekBar
            android:id="@+id/sb_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/seekbar_play"
            android:thumb="@drawable/seekbar_play_thumb" />

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_margin"
            android:text="00:00"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/dimen_text_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dimen_margin"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_play_collect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:scaleType="centerInside"
            android:src="@drawable/img_favourite_normal" />

        <ImageButton
            android:id="@+id/ib_play_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:scaleType="centerInside"
            android:src="@drawable/img_play_prev" />

        <ImageButton
            android:id="@+id/ib_play_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:scaleType="centerInside"
            android:src="@drawable/play_play" />

        <ImageButton
            android:id="@+id/ib_play_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:scaleType="centerInside"
            android:src="@drawable/img_play_next" />

        <ImageButton
            android:id="@+id/ib_play_queue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/color_black"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/play_mode_all_repeat" />
    </LinearLayout>
</LinearLayout>