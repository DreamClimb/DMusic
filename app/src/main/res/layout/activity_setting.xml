<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_sub"
    android:orientation="vertical">

    <com.d.dmusic.view.TitleLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        android:background="@color/color_main"
        app:tl_leftDrawable="@drawable/ic_title_back"
        app:tl_middleText="title" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="换肤"
        app:rl_toggleVisibility="gone" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="夜间模式"
        app:rl_toggleVisibility="gone" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="模式选择"
        app:rl_toggleVisibility="gone" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="心印"
        app:rl_toggleVisibility="gone" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="gone"
        app:rl_text="歌曲菜单模式-下拉显示"
        app:rl_toggleVisibility="visible" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="gone"
        app:rl_text="显示新建歌单+"
        app:rl_toggleVisibility="visible" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="gone"
        app:rl_text="头像/封面自动旋转"
        app:rl_toggleVisibility="visible" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="gone"
        app:rl_text="晃动手机切歌"
        app:rl_toggleVisibility="visible" />

    <include layout="@layout/layout_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_margin"
        android:background="@color/color_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="帮助中心"
        app:rl_toggleVisibility="gone" />

    <include layout="@layout/layout_line" />

    <com.d.dmusic.view.RowLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_row_height"
        android:background="@color/color_bg_main"
        app:rl_gotoVisibility="visible"
        app:rl_text="关于畅听音乐"
        app:rl_toggleVisibility="gone" />
</LinearLayout>