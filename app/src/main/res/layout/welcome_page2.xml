<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_title_more"
        app:layout_heightPercent="64%"
        app:layout_marginBottomPercent="32%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/iv_dot3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:layout_marginBottomPercent="6%">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_corner_wel"
            android:text="开启音乐之旅"
            android:textColor="@color/color_main"
            android:textSize="17dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_dot3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_title_more"
        app:layout_heightPercent="5%"
        app:layout_marginBottomPercent="6%"
        app:layout_widthPercent="90%" />
</android.support.percent.PercentRelativeLayout>