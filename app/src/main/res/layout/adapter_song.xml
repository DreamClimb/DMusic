<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_item_icon"
            android:layout_height="@dimen/dimen_item_icon"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_text_small" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_item_margin_top"
                android:textSize="@dimen/dimen_text_mini" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_more"
            android:layout_width="@dimen/dimen_item_height"
            android:layout_height="@dimen/dimen_item_height"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_more"
                android:layout_width="@dimen/dimen_item_icon"
                android:layout_height="@dimen/dimen_item_icon"
                android:background="@drawable/selector_toggle_more"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_song_sub" />

    <include layout="@layout/layout_line" />
</LinearLayout>