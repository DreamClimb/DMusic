<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_full_scan"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="8%"
        app:layout_marginTopPercent="8%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_main"
            android:src="@drawable/ic_scan_mobile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W, 159.84:305.64"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            skin:enable="true" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_full_scan"
        android:layout_above="@+id/btn_custom_scan"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_corner_main"
        android:gravity="center"
        android:text="全盘扫描"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_sub"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="2.6%"
        app:layout_widthPercent="85%" />

    <Button
        android:id="@+id/btn_custom_scan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_corner_main"
        android:gravity="center"
        android:text="自定义扫描"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_sub"
        app:layout_heightPercent="8%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="85%" />
</android.support.percent.PercentRelativeLayout>