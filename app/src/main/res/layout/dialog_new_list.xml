<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_trans"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_dialog_width"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin"
            android:gravity="center"
            android:text="新建歌单"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_text_main" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:background="@color/color_trans"
            android:hint="最长40个字符"
            android:paddingBottom="@dimen/dimen_margin"
            android:paddingTop="@dimen/dimen_margin"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_text_sub" />

        <include layout="@layout/layout_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@color/color_trans"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/ok"
                android:textColor="@color/color_main"
                android:textSize="@dimen/dimen_text_sub" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_line" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_trans"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/cancel"
                android:textColor="@color/color_main"
                android:textSize="@dimen/dimen_text_sub" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>